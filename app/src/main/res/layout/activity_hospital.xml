<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/very_light_pink"
    tools:context=".ui.hospital.HospitalActivity">

    <!-- Toolbar with back button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/healthcare_pink"
        android:elevation="4dp"
        app:title="Hospital Dashboard"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back_arrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hospital ID Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/healthcare_pink_lighter"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥ Hospital Information"
                        android:textColor="@color/healthcare_pink_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewHospitalId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Hospital ID: Loading..."
                        android:textColor="@color/text_dark"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- View Patient on Map Button - ALWAYS VISIBLE -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewOnMap"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/healthcare_pink"
                android:text="ðŸ—ºï¸ View Patient Live Location"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_mylocation"
                app:iconTint="@color/white"
                app:iconSize="28dp" />

            <!-- TEST CALL Button - Manual Call Testing -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonTestCall"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/success_green"
                android:text="ðŸ“ž TEST CALL AMBULANCES"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_call"
                app:iconTint="@color/white"
                app:iconSize="28dp" />

            <!-- Status Message -->
            <TextView
                android:id="@+id/textViewStatusMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="Waiting for emergency alerts..."
                android:textColor="@color/text_medium"
                android:textSize="16sp"
                android:visibility="visible" />

            <!-- Emergency Alert Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmergencyAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/border_pink"
                app:strokeWidth="2dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Emergency Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@color/healthcare_red_light"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸš¨ INCOMING EMERGENCY"
                            android:textColor="@color/healthcare_red"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewTimestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Just now"
                            android:textColor="@color/text_medium"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Patient Details -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Patient Details"
                        android:textColor="@color/healthcare_pink_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@color/very_light_pink"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Incident ID:"
                            android:textColor="@color/text_medium"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewIncidentId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="INC-12345"
                            android:textColor="@color/healthcare_pink"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:background="@color/very_light_pink"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Patient ID:"
                            android:textColor="@color/text_medium"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewPatientId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="USER-67890"
                            android:textColor="@color/healthcare_pink"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Location Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="ðŸ“ Patient Location"
                        android:textColor="@color/healthcare_pink_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@color/very_light_pink"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Latitude:"
                            android:textColor="@color/text_medium"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewLatitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0.0000"
                            android:textColor="@color/healthcare_pink"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:background="@color/very_light_pink"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Longitude:"
                            android:textColor="@color/text_medium"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewLongitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0.0000"
                            android:textColor="@color/healthcare_pink"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:id="@+id/layoutActionButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonReject"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Reject"
                            android:textColor="@color/text_medium"
                            android:textSize="16sp"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/border_light"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonAccept"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/healthcare_pink"
                            android:text="âœ“ Accept"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                <!-- Assignment Status -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAssignmentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/success_green_light"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/textViewAssignmentStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="âœ“ You have been assigned to this emergency"
                            android:textColor="@color/success_green"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Cancelled Status -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCancelledStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/warning_orange_light"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/textViewCancelledStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="âœ— Another hospital accepted this emergency"
                            android:textColor="@color/warning_orange"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/border_pink"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â„¹ï¸ Instructions"
                        android:textColor="@color/healthcare_pink_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="â€¢ Emergency alerts appear automatically\nâ€¢ First hospital to accept gets assigned\nâ€¢ Prepare emergency room upon acceptance\nâ€¢ Click map button above to view demo live location!"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
